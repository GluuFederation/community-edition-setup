[Unit]
Description=oxd-server daemon
After=oxauth.service
Requires=oxauth.service

[Service]
Type=forking
ExecStart=/opt/oxd-server/bin/oxd-server start
ExecStop=/opt/oxd-server/bin/oxd-server stop
RemainAfterExit=yes
User=%(service_user)s
Group=gluu
TimeoutSec=420
ExecStartPre=/usr/bin/sleep 150

[Install]
WantedBy=multi-user.target
